{
	"name": "__PACKAGE_NAME__",
	"version": "0.0.1",

	"config": {
		"WebpackConfigs": "./.config/webpack/Configurations"
	},

	"dependencies": {
		"jquery":     "^3.4.1",
		"hotkeys-js": "^3.6.11"
	},

	"devDependencies": {
		"@types/node": "^12.0.8",
		"typescript":  "^3.5.2",
		"ts-node":     "^8.3.0",
		"@types/pug":  "^2.0.4",
		"pug":         "^2.0.3",
		"stylus":      "^0.54.5",

		"@types/webpack":                     "^4.4.32",
		"webpack":                            "^4.34.0",
		"webpack-cli":                        "^3.3.4",
		"@types/webpack-dev-server":          "^3.1.6",
		"webpack-dev-server":                 "^3.7.1",
		"@types/clean-webpack-plugin":        "^0.1.3",
		"clean-webpack-plugin":               "^3.0.0",
		"@types/html-webpack-plugin":         "^3.2.0",
		"html-webpack-plugin":                "^3.2.0",
		"@types/copy-webpack-plugin":         "^5.0.0",
		"copy-webpack-plugin":                "^5.0.3",
		"@types/mini-css-extract-plugin":     "^0.2.1",
		"mini-css-extract-plugin":            "^0.7.0",
		"webpackbar":                         "^3.2.0",
		"@types/webpackbar":                  "^2.6.0",
		"webpack-build-notifier":             "^1.0.3",
		"webpack-inject-plugin":              "^1.5.2",
		"@types/extract-text-webpack-plugin": "^3.0.4",
		"extract-text-webpack-plugin":        "3.0.2",

		"apply-loader":  "^2.0.0",
		"css-loader":    "^3.0.0",
		"file-loader":   "^4.0.0",
		"loader-utils":  "^1.2.3",
		"pug-loader":    "^2.4.0",
		"raw-loader":    "^3.0.0",
		"style-loader":  "^0.23.1",
		"stylus-loader": "^3.0.2",
		"ts-loader":     "^6.0.2",

		"npm-run-all":       "^4.1.5",
		"cpy-cli":           "^2.0.0",
		"del-cli":           "^2.0.0",
		"make-dir-cli":      "^2.0.0",

		"@types/klaw-sync" : "^6.0.0",
		"klaw-sync":         "^6.0.0",

		"@types/jest": "^24.0.14",
		"jest":        "^24.8.0",
		"ts-jest":     "^24.0.2",

		"@types/jquery": "^3.3.29",

		"@types/escape-string-regexp": "^2.0.1",
		"escape-string-regexp":        "^2.0.0"
	},

	"scripts": {
		"build:local": "webpack --config %npm_package_config_WebpackConfigs%/Production/__Main__.ts",

		"build:push":   "npm-run-all build:push:*",
		"build:push:1": "npm run build:local",
		"build:push:2": "npm run github:push",

		"github:push": "npm-run-all github:push:*",

		"github:push:source":   "npm-run-all github:push:source:*",
		"github:push:source:1": "git add --all",
		"github:push:source:2": "git commit --all --message \"..\"",
		"github:push:source:3": "git push",

		"github:pull:source":   "git pull",

		"github:push:gh-pages":   "npm-run-all github:push:gh-pages:*",
		"github:push:gh-pages:1": "git -C ./__dist__ add --all",
		"github:push:gh-pages:2": "git -C ./__dist__ commit --all --message \"..\"",
		"github:push:gh-pages:3": "git -C ./__dist__ push",

		"github:pull:gh-pages":   "git -C ./__dist__ pull",

		"install-dependencies": "yarn install",

		"test":          "cls && jest",
		"test:coverage": "cls && jest --coverage"
	}
}
