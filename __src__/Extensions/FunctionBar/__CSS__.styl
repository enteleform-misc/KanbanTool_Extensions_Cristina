//##############//
//###  Core  ###//
//##############//

.{FunctionBar-container}

	--BorderColor:           #ABABB1
	--ExpandButton_Color:    #6A6A6A
	--RowDivider_Height:     35px
	--ColumnDivider_Height:  24px

	display:         flex
	flex-direction:  column
	position:        fixed
	top:             0
	left:            0
	width:           100%
	height:          100%
	z-index:         1000
	pointer-events:  none

	.left, .right, .top, .bottom
		display:         flex
		pointer-events:  auto
		background:      #C6C6CC

	.left
		border-right:   1px solid var(--BorderColor)
	.right
		border-left:    1px solid var(--BorderColor)
	.top
		border-bottom:  1px solid var(--BorderColor)
	.bottom
		border-top:     1px solid var(--BorderColor)

	.center
		display:          flex
		justify-content:  space-between
		flex-direction:   row
		flex-grow:        1

		.left, .right
			display:          flex
			flex-direction:   row

			.column
				display:         flex
				flex-direction:  column

				.cell
					text-align:  left

				.divider
					height:  var(--ColumnDivider_Height)

				.groupLabel
					padding-left:  5px

					&:first-child
						margin-top:  var(--ColumnDivider_Height)

	.top, .bottom
		display:         flex
		flex-direction:  column

		.row
			display:          flex
			flex-direction:   row
			justify-content:  center
			margin:           auto

			.cell
				text-align:   center
				white-space:  nowrap

			.divider
				width:  var(--RowDivider_Height)

			.groupLabel
				align-self:    center
				margin-right:  10px

			&.stretch
				margin:  0

				.cell
					flex:  1

	.cell
		flex:           0
		min-width:      fit-content
		min-height:     fit-content
		padding:        5px
		overflow:       hidden
		cursor:         pointer
		border-radius:  3px
		border:         1px solid var(--BorderColor)
		background:     #D9D9DE
		color:          #505052

	.groupLabel
		color:        #505050
		font-size:    14px
		font-weight:  bold

//#################################//
//###  Core - Collapse Toggles  ###//
//#################################//

.{FunctionBar-container}

	.left, .right, .top, .bottom
		&.empty,
		&.collapsed > :not(.expand-button),
		&:not(.collapsed) > .expand-button
			display:  none

	.left, .right
		.column.expand-button > .cell
			display:          flex
			flex:             1
			flex-direction:   column
			justify-content:  center
			padding:          0 2px 0 1px
			font-size:        15pt
			color:            var(--ExpandButton_Color)

	.top, .bottom
		.row.expand-button > .cell
			padding:      0 0 2px 0
			line-height:  18px
			font-size:    14pt
			color:        var(--ExpandButton_Color)


//#############################//
//###  KanbanTool - Layout  ###//
//#############################//

:root
	--KanbanToolOffsets_NavHeight:   0px
	--KanbanToolOffsets_TopHeight:   0px
	--KanbanToolOffsets_LeftWidth:   0px
	--KanbanToolOffsets_RightWidth:  0px
	--KanbanToolOffsets_TopOffset:   0px

nav.navbar
	margin-top:   var(--KanbanToolOffsets_TopHeight)                                                       !important
	margin-left:  var(--KanbanToolOffsets_LeftWidth)                                                       !important
	width:        calc(100% - (var(--KanbanToolOffsets_LeftWidth) + var(--KanbanToolOffsets_RightWidth)))  !important

.kt-side-panel-slide

	kt-board
		margin-top:     var(--KanbanToolOffsets_TopOffset             )  !important
		margin-bottom:  calc(var(--KanbanToolOffsets_TopOffset) + 17px)  !important
		margin-left:    var(--KanbanToolOffsets_LeftWidth             )  !important
		margin-right:   var(--KanbanToolOffsets_RightWidth            )  !important

	.kt-extensions-swimlane_labels
		left:  var(--KanbanToolOffsets_LeftWidth )  !important

.kt-hint-labels-container
	top:  calc(var(--KanbanToolOffsets_TopHeight) - 8px)  !important


//############################//
//###  KanbanTool - Style  ###//
//############################//

nav.navbar > .navbar-inner
	background-color:  rgba(243, 243, 244, 1)  !important

.kt-hint-labels-container.kt-hint-label
	background-color:  #F9F9F9         !important
	border:            solid #DDD 1px  !important

.kt-extensions-swimlane_labels._swimlane_label
	margin:            0               !important
	background-color:  #F9F9F9         !important
	border:            solid #DDD 1px  !important
	border-top:        none            !important
	&:first-child
		border-top:  solid #DDD 1px  !important
